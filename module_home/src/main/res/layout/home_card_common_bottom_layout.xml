<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/common_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_category"
                android:textSize="@dimen/text_size_12"
                app:qmui_skin_text_color="?attr/app_skin_card_tag_color"
                android:layout_width="wrap_content"
                android:paddingStart="@dimen/dp_2"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_created"
                android:paddingBottom="@dimen/dp_6"
                android:textSize="@dimen/text_size_12"
                app:qmui_skin_text_color="?attr/app_skin_card_tag_color"
                android:layout_width="wrap_content"
                android:paddingStart="@dimen/dp_2"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:qmui_skin_background="?attr/app_skin_line_bg_color"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

            <FrameLayout
                    android:layout_width="0dp"
                    android:id="@+id/span_collection"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/tv_collection"
                        android:textSize="@dimen/text_size_12"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/icon_short_collect_21_line_gray"
                        app:qmui_skin_tint_color="?attr/app_skin_card_function_tint_color"
                        android:layout_width="wrap_content"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center"
                        android:text="0"
                        app:qmui_skin_text_color="?attr/app_skin_card_function_tint_color"
                        android:layout_height="wrap_content"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="0dp"
                    android:id="@+id/span_comment"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/tv_comment"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/icon_short_comment_21_line_gray"
                        app:qmui_skin_tint_color="?attr/app_skin_card_function_tint_color"
                        android:layout_width="wrap_content"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="@dimen/text_size_12"
                        app:qmui_skin_text_color="?attr/app_skin_card_function_tint_color"
                        android:layout_height="wrap_content"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="0dp"
                    android:id="@+id/span_like"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/tv_like"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/selector_card_function_like"
                        app:qmui_skin_tint_color="?attr/app_skin_card_function_tint_color"
                        android:layout_width="wrap_content"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_12"
                        android:text="0"
                        app:qmui_skin_text_color="?attr/app_skin_card_function_tint_color"
                        android:layout_height="wrap_content"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</layout>