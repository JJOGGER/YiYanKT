<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:clipChildren="false"
        app:qmui_skin_background="?attr/app_skin_common_background_1"
        android:layout_height="match_parent">

    <com.scwang.smartrefresh.horizontal.SmartRefreshHorizontal
            android:id="@+id/srl_refresh"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:clipChildren="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.jogger.widget.HomeViewPager
                    android:id="@+id/vp_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_70"
                    android:layout_marginBottom="@dimen/dp_70"
                    android:layout_gravity="center"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingLeft="@dimen/dp_70"
                    android:paddingRight="@dimen/dp_70"
                    android:layout_width="wrap_content"/>
        </FrameLayout>
    </com.scwang.smartrefresh.horizontal.SmartRefreshHorizontal>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:id="@+id/topbar"
            android:layout_height="wrap_content"/>
</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>