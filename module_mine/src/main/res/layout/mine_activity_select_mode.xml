<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:qmui_skin_background="?attr/app_skin_common_background"
            tools:context=".activity.SelectModeActivity">

        <androidx.core.widget.NestedScrollView
                android:layout_marginBottom="@dimen/dp_66"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                        app:qmui_is_circle="true"
                        tools:visibility="visible"
                        android:layout_marginTop="@dimen/dp_50"
                        android:visibility="gone"
                        app:qmui_border_color="@color/transparent"
                        android:layout_gravity="center_horizontal|bottom"
                        android:id="@+id/iv_header"
                        android:layout_width="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_height="@dimen/dp_140"/>

                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ll_verticle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_300">

                        <TextView
                                app:typeface="@{1}"
                                android:layout_width="match_parent"
                                android:id="@+id/tv_title1"
                                android:paddingStart="@dimen/dp_32"
                                android:paddingEnd="@dimen/dp_32"
                                android:layout_marginTop="@dimen/dp_20"
                                android:gravity="center"
                                android:textSize="@dimen/text_size_15"
                                tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                                app:qmui_skin_text_color="?attr/app_skin_card_text_color"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:gravity="center"
                                app:typeface="@{1}"
                                android:paddingStart="@dimen/dp_32"
                                android:paddingEnd="@dimen/dp_32"
                                android:layout_marginTop="@dimen/dp_25"
                                android:layout_width="match_parent"
                                android:id="@+id/tv_content1"
                                tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                                android:textSize="@dimen/text_size_15"
                                app:qmui_skin_text_color="?attr/app_skin_card_text_color"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/ll_horizontal"
                            android:orientation="horizontal"
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_300">

                        <com.qmuiteam.qmui.widget.QMUIVerticalTextView
                                android:gravity="center"
                                app:typeface="@{1}"
                                android:paddingStart="@dimen/dp_32"
                                android:layout_marginTop="@dimen/dp_25"
                                android:layout_width="match_parent"
                                android:id="@+id/tv_content2"
                                tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                                android:textSize="@dimen/text_size_15"
                                app:qmui_skin_text_color="?attr/app_skin_card_text_color"
                                android:layout_height="wrap_content"/>

                        <com.qmuiteam.qmui.widget.QMUIVerticalTextView
                                app:typeface="@{1}"
                                android:layout_width="match_parent"
                                android:id="@+id/tv_title2"
                                android:paddingStart="@dimen/dp_32"
                                android:paddingEnd="@dimen/dp_32"
                                android:layout_marginTop="@dimen/dp_20"
                                android:gravity="center"
                                android:textSize="@dimen/text_size_15"
                                tools:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                                app:qmui_skin_text_color="?attr/app_skin_card_text_color"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <RadioGroup
                android:layout_marginBottom="@dimen/dp_76"
                android:layout_width="wrap_content"
                android:id="@+id/rg_group"
                android:orientation="horizontal"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_height="wrap_content">

            <RadioButton
                    android:id="@+id/rb_1"
                    android:button="@null"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:background="@drawable/selector_rb_card_style1"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:button="@null"
                    android:id="@+id/rb_2"
                    android:layout_width="wrap_content"
                    android:background="@drawable/selector_rb_card_style2"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:id="@+id/rb_3"
                    android:button="@null"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@drawable/selector_rb_card_style3"
                    android:layout_height="wrap_content"/>

            <RadioButton
                    android:button="@null"
                    android:id="@+id/rb_4"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:background="@drawable/selector_rb_card_style4"
                    android:layout_height="wrap_content"/>
        </RadioGroup>

        <LinearLayout
                android:gravity="center"
                tools:background="@color/color_333333"
                app:qmui_skin_background="?attr/app_skin_mode_background"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_66">

            <ImageView
                    android:id="@+id/iv_img_style"
                    android:src="@drawable/icon_oval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/iv_font"
                    android:src="@drawable/icon_font"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/iv_gravity"
                    android:layout_marginStart="@dimen/dp_16"
                    android:src="@drawable/icon_alignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>

</layout>